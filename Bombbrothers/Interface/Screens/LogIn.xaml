<UserControl x:Class="Bombbrothers.Interface.Screens.LogIn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="670" d:DesignWidth="790">
    <Grid>
        <TextBlock Text="BombBrothers" FontSize="36" FontFamily="Snap ITC" HorizontalAlignment="Center"
                   VerticalAlignment="Top" Margin="0,70,0,0" />
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Podaj login:" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"
                       HorizontalAlignment="Center" />
            <TextBox Name="name" BorderBrush="Black" HorizontalAlignment="Center" Width="350" Height="25"
                     Margin="0,0,0,30" FontSize="16" />
            <TextBlock Text="Podaj hasło:" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"
                       HorizontalAlignment="Center" />
            <PasswordBox Name="password" BorderBrush="Black" HorizontalAlignment="Center" Width="350" Height="25"
                         Margin="0,0,0,30" FontSize="16" />
            <Button Width="40" Height="40" Content="-&gt;" Click="Button_Click" />
        </StackPanel>
    </Grid>
</UserControl>